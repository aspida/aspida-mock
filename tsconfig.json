{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "aspida-mock": ["src"]
    },
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "target": "es2018"
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
